@model sb_admin.web.Models.ThanhVien
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div class="modal fade" id="editModal">
        <div class="modal-dialog" style="width:100%">
            <div class="modal-content">

                <div class="modal-body">
                    <h3>Bạn có chắc muốn xóa thông tin này?</h3>
                    <div>
                        <hr />
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Tài Khoản</th>
                                    <th>Tên Đầy Đủ</th>
                                    <th>Email</th>
                                    <th>Số Điện Thoại</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd gradeX">
                                    <input type="hidden" id="idTV" value="@Model.idTV" />
                                    <td><input class="TaiKhoan" id="TaiKhoan" type="text" value="@Model.TaiKhoan" style="width:100%" /> </td>
                                    <td><input class="TenDayDu" id="TenDayDu" type="text" value="@Model.TenDayDu" style="width:100%" /> </td>
                                    <td class="center"><input class="email" id="Email" type="text" value="@Model.Email" style="width:100%" /></td>
                                    <td><input class="SoDienThoai" id="SoDienThoai" type="text" value="@Model.SoDienThoai" style="width:100%" /></td>
                                    
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div><!-- /.modal-body -->
                <div class="modal-footer">

                    <div class="form-actions no-color text-center">
                        <input type="submit" value="Sửa" onclick="Edit()" class="btn btn-danger" />
                        <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    </div>

                </div><!-- /.modal-footer -->
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
</body>
</html>
<script>
    function Edit() {
        var data = {
            idTV: $("#idTV").val(),
            SoDienThoai: $("#SoDienThoai").val(),
            TenDayDu: $("#TenDayDu").val(),
            TaiKhoan: $("#TaiKhoan").val(),
            Email: $("#Email").val()
        }
        console.log(data);
        $.ajax({
            url: '/Admin/Edit',
            type: 'POST',
           data:data,
            success: function (data) {
                location.reload();
            }
        });
    }
</script>