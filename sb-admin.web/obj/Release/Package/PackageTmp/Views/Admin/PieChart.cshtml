
@{
    ViewBag.Title = "PieChart";
    Layout = "~/Views/Shared/_admin2.cshtml";
}

<h2>PieChart</h2>

<style>
    #chart_display {
        height: 400px;
        width: 650px;
    }
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="~/Scripts/canvasjs.min.js"></script>
<script src="http://code.highcharts.com/highcharts.js"></script>
<script type="text/javascript" src="https://www.google.com/jsapi"></script>



<script type="text/javascript">

    $(function () {
        var dataPoints = [];
        $.ajax({
            url: '/Admin/LayThoiGianOnOff',
            type: 'POST',
            sucess: function (data) {
                //load chart khi serach

            }
        }).done(function (data) {
            var obj = JSON.parse(data);
            var a="Thời gian on";
            var b = "Thời gian off";
            var sumtgon = 0;
            var sumtgoff=0;
            for (var i = 0; i <= obj.length - 1; i++) {
                sumtgon += parseInt(obj[i].Tgon);
                sumtgoff += parseInt(obj[i].TGoff);
            }
            dataPoints.push({ label: a, y: sumtgoff });
            dataPoints.push({ label: b, y: sumtgon });
            console.log(dataPoints);
            var chart = new CanvasJS.Chart("chartContainer", {
                title:{
                    text: "asdasd",
                    fontFamily: "arial black"
                },
                animationEnabled: true,
                legend: {
                    verticalAlign: "bottom",
                    horizontalAlign: "center"
                },
                theme: "theme1",
                data:[
                {
                    // Change type to "bar", "splineArea", "area", "spline", "pie",etc.
                    type: "pie",
                    dataPoints: dataPoints
                }
                ]
            });

            chart.render();
        });
    });
</script>

<div id="chartContainer" style="width: 100%; height: 300px"></div>