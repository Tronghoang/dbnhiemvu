@model sb_admin.web.Models.Benh

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_admin2.cshtml";
    <style type="text/css">
        .thumb-image {
            float: left;
            width: 100px;
            position: relative;
            padding: 5px;
        }
    </style>
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-lg-12">
        <section class="aaa ">
            <header class="panel_header">
                <h2 class="title pull-left">Thêm bệnh</h2>

            </header>
            <div class="content-body">
                <form id="icon_validate" action="#">

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label class="form-label">Tiêu đề</label>
                                <div class="controls">
                                    <input type="text" id="title" value="@Model.title" name="title" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">Hình Ảnh</label>
                                <div class="controls">
                                    <input type="file" id="HinhAnh" value="@Model.HinhAnh" name="HinhAnh">
                                    <div id="dvPreview"   value="~/Content/image/@Model.HinhAnh" > 
                                    </div>
                                </div>
                            </div>

                            <div class="form-group" style="padding-top:100px">
                                <label class="form-label">Nội Dung</label>
                                <div class="controls">
                                    <textarea  class="ckeditor"  cols="80" id="NoiDung" name="NoiDung" rows="10">@Model.NoiDung</textarea>
                                </div>
                            </div>


                            <div class="pull-right">
                                <button type="submit" class="btn btn-success">Save</button>
                                <button type="button" class="btn btn-default">Cancel</button>
                            </div>
                            <div class="pull-left">
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
}

@section scripts{
    <script src="~/plugins/ckeditor/ckeditor.js" type="text/javascript"></script>

    @*upload image using ajax request*@
    <script>
        $(document).ready(function () {
            $("#HinhAnh").change(function () {
                var formData = new FormData();
                var totalFiles = document.getElementById("HinhAnh").files.length;
                for (var i = 0; i < totalFiles; i++) {
                    var file = document.getElementById("HinhAnh").files[i];
                    formData.append("HinhAnh", file);
                    @*preview image*@
                    //Get count of selected files
                    var countFiles = $(this)[0].files.length;
                    var imgPath = $(this)[0].value;
                    var extn = imgPath.substring(imgPath.lastIndexOf('.') + 1).toLowerCase();
                    var dvPreview = $("#dvPreview");
                    dvPreview.empty();
                    if (extn == "gif" || extn == "png" || extn == "jpg" || extn == "jpeg") {
                        if (typeof (FileReader) != "undefined") {
                            //loop for each file selected for uploaded.
                            for (var i = 0; i < countFiles; i++) {
                                var reader = new FileReader();
                                reader.onload = function (e) {
                                    $("<img />", {
                                        "src": e.target.result,
                                        "class": "thumb-image"
                                    }).appendTo(dvPreview);
                                }
                                dvPreview.show();
                                reader.readAsDataURL($(this)[0].files[i]);
                            }
                        } else {
                            alert("This browser does not support FileReader.");
                        }
                    } else {
                        alert("Pls select only images");
                    }

                    @*end preview image*@
                }

                $.ajax({
                    type: "POST",
                    url: '/Benhs/Edit',
                    data: formData,
                    dataType: 'json',
                    contentType: false,
                    processData: false,

                });;
                console.log(formData)
            });
        });

    </script>

}
